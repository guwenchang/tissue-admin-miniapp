/* pages/login/login.wxss */
.login {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.login-form {
  display: flex;
  flex-direction: column;
}
.login-btn {
  margin: 10rpx 50rpx;
}
page{
  height: 100%;
}